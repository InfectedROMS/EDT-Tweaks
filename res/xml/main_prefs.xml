<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	android:key="pref_root"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="Statusbar Tweaks"
		android:key="statusbar_cat">
		<PreferenceScreen
			android:title="Lockscreen settings"
			android:key="lockscreen_settings">
			<intent
				android:action="android.intent.action.MAIN"
				android:targetPackage="com.roman.tweaks"
				android:targetClass="com.roman.tweaks.activities.LockscreenActivity" />
		</PreferenceScreen>

		<Preference
			android:title="Clock options"
			android:key="clock_options_pref" />
		<Preference
			android:title="Battery options"
			android:key="battery_options_pref" />
		<Preference
			android:title="Signal options"
			android:key="signal_options_pref" />

	</PreferenceCategory>

	<PreferenceCategory
		android:title="Other"
		android:key="other_cat">

		<CheckBoxPreference
			android:key="show_recent_apps"
			android:title="Show recent apps"
			android:summary="In the dropdown. Will need a reboot after disabling." />

	</PreferenceCategory>
</PreferenceScreen>
