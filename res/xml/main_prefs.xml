<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="Statusbar Tweaks"
		android:key="statusbar_cat">
		
		
		<Preference
			android:title="Clock Options"
			android:key="clock_options_pref" />
		<Preference
			android:title="Battery Options"
			android:key="battery_options_pref" />
		<Preference
			android:title="Signal Options"
			android:key="signal_options_pref" />

	</PreferenceCategory>

	<PreferenceCategory
		android:title="Other"
		android:key="other_cat">
		<PreferenceScreen
			android:title="Misc"
			android:summary="SD Cache, Debugging visibility"
			android:key="misc_prefscreen">
			<ListPreference
				android:key="read_ahead_pref"
				android:title="SD Read-Ahead Cache"
				android:entryValues="@array/read_ahead_entries"
				android:entries="@array/read_ahead_entries" />
		</PreferenceScreen>
		<Preference
			android:title="About"
			android:key="about_pref" />
		<CheckBoxPreference
			android:title="Enable BLN"
			android:key="bln_pref"
			android:summary="For notifications" />

	</PreferenceCategory>
</PreferenceScreen>
