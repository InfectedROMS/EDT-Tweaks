<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceScreen
		android:title="Lock Screen Options">
		<ListPreference
			android:entryValues="@array/lock_screen_values"
			android:entries="@array/lock_screen_entries"
			android:key="lockscreen_selection_pref"
			android:title="Lock Screen Selection"></ListPreference>
		<Preference
			android:key="custom_app_pref"
			android:title="Choose Custom App"></Preference>
		<Preference
			android:key="lock_screen_wallpaper_pref"
			android:title="Set Lockscreen Wallpaper"
			android:summary="Only works with the SGSII lockscreen. \nPress menu to restore the original."></Preference>
		<Preference
			android:key="lockscreen_sgs2_restore_default"
			android:title="Restore Default Wallpaper"></Preference>
		<PreferenceCategory
			android:title="Timeout Settings">
			<ListPreference
				android:entries="@array/lockscreen_delayed_behavior_entries"
				android:entryValues="@array/lockscreen_delayed_behavior_values"
				android:dialogTitle="When to delay the lockscreen"
				android:key="lockscreen_delay_behavior"
				android:title="Delay Behavior"></ListPreference>
			<Preference
				android:key="lockscreen_delay_timeout_pref"
				android:title="Lockscreen Delay"></Preference>
			<Preference
				android:key="lockscreen_timeout_pref"
				android:title="Lockscreen Timeout"></Preference>

		</PreferenceCategory>
		<PreferenceCategory
			android:title="Music Controls">
			<CheckBoxPreference
				android:key="lockscreen_music_controls"
				android:title="Music Controls "></CheckBoxPreference>
			<CheckBoxPreference
				android:key="lockscreen_always_music_controls"
				android:title="Always Music Controls"></CheckBoxPreference>
		</PreferenceCategory>
	</PreferenceScreen>
	<PreferenceCategory
		android:title="Statusbar Tweaks"></PreferenceCategory>
	<Preference
	android:title="Battery Options" android:key="battery_options_pref">
	</Preference>
	<ListPreference
		android:key="clock_am_pm"
		android:entries="@array/am_pm_entries"
		android:entryValues="@array/am_pm_values"
		android:title="Clock Options"></ListPreference>
	<Preference
		android:key="clock_color_pref"
		android:title="Choose Clock Color"></Preference>
	<PreferenceScreen
		android:title="Signal Options">
		<CheckBoxPreference
			android:key="show_signal_bars"
			android:title="Show Signal Bars"
			android:enabled="true"></CheckBoxPreference>
		<CheckBoxPreference
			android:title="Show Signal Strength"
			android:persistent="true"
			android:key="show_signal_numbers"></CheckBoxPreference>
		<CheckBoxPreference
			android:key="show_signal_dbm"
			android:title="Show dBm Text"></CheckBoxPreference>
	</PreferenceScreen>
	<PreferenceCategory
		android:title="Other"></PreferenceCategory>
	<PreferenceScreen
		android:title="Misc"
		android:summary="SD Cache, Debugging visibility">
		<CheckBoxPreference
			android:key="hide_adb"
			android:title="Hide ADB Notification"
			android:summary="Debugging Notification in the status bar"></CheckBoxPreference>
		<ListPreference
			android:key="read_ahead_pref"
			android:title="SD Read-Ahead Cache"
			android:entryValues="@array/read_ahead_entries"
			android:entries="@array/read_ahead_entries"></ListPreference>
	</PreferenceScreen>
	<Preference
		android:title="About"
		android:key="about_pref"
		android:summary="Thread &amp; Twitter links!"></Preference>
</PreferenceScreen>
