<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<CheckBoxPreference android:title="Show Battery Icon"
		android:key="show_battery_icon" />
	<ListPreference android:entries="@array/battery_text_display_entries"
		android:title="Battery Text Style" android:key="battery_text_style_pref"
		android:entryValues="@array/battery_text_display_values" />
	<PreferenceCategory android:title="Color Settings">
		<CheckBoxPreference android:title="Automatically Color"
			android:key="battery_automatically_color_pref" />
		<Preference android:title="Static Battery Color"
			android:key="battery_color_pref" />
		<Preference android:title="[Auto] Charging Color"
			android:key="battery_color_auto_charging" />
		<Preference android:title="[Auto] Regular Color"
			android:key="battery_color_auto_regular" />
		<Preference android:title="[Auto] Medium Level Color"
			android:key="battery_color_auto_medium" android:summary="When battery is &lt; 40%" />
		<Preference android:title="[Auto] Low Level Color"
			android:key="battery_color_auto_low" android:summary="When battery is &lt; 15%" />
	</PreferenceCategory>
</PreferenceScreen>
