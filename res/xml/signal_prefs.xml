<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="Signal Options"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference android:enabled="true" android:title="Show Signal Bars" android:key="show_signal_bars" />
    <ListPreference android:entries="@array/signal_text_display_entries" android:title="Signal Text Style" android:key="signal_text_style_pref" android:entryValues="@array/signal_text_display_values" />
    <CheckBoxPreference android:title="Automatically Color" android:key="signal_automatically_color_pref" />
    <CheckBoxPreference android:title="Show 4G Icon" android:key="show_4g_icon" android:summary="Instead of H" />
    <CheckBoxPreference android:title="Show 2G Icon" android:key="show_2g_icon" android:summary="Instead of E" />
    <PreferenceCategory android:title="Color Settings">
        <Preference android:title="Static Signal Text Color" android:key="signal_color_static" />
        <Preference android:title="[Auto] 0 bars" android:key="signal_color_0" />
        <Preference android:title="[Auto] 1 bar" android:key="signal_color_1" />
        <Preference android:title="[Auto] 2 bars" android:key="signal_color_2" />
        <Preference android:title="[Auto] 3 bars" android:key="signal_color_3" />
        <Preference android:title="[Auto] 4 bars" android:key="signal_color_4" />
    </PreferenceCategory>
</PreferenceScreen>
